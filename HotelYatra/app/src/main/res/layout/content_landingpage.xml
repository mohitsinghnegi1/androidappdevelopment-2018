<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".landingpage"
    tools:showIn="@layout/app_bar_landingpage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"

            android:background="@drawable/background_gradient"
            android:gravity="center"
            android:orientation="vertical">

            <ViewFlipper
                android:id="@+id/flip1"
                android:layout_width="match_parent"
                android:layout_height="300dp"

               >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="316dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic4" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic5" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic6" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic7" />

                <ImageView
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic8" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic9" />
            </ViewFlipper>

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#0493ea"
                android:fontFamily="@font/confortaa"
                android:padding="10dp"
                android:text="YATRA HOTELS"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:fontFamily="@font/confortaa"
                android:padding="10dp"
                android:text="Yatra.com is a leading aggregator of Hotels in India and internationally. With over 83,000 hotels in India covering 1100 cities, it is Indiaâ€™s largest platform for Domestic Hotels. Internationally it has more than 5 lakh hotels associated with it, covering popular destinations across the world."
                android:textAlignment="center"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@drawable/pic2"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="|| About Us ||"
                        android:textColor="#fff"
                        android:textSize="14dp"

                        android:fontFamily="@font/confortaa"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textAlignment="viewEnd"
                        android:gravity="end"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The company provides information, pricing, availability, and booking facility for domestic and international air travel, domestic and international hotel bookings, holiday packages, buses, trains, in city activities, inter-city and point-to-point cabs, homestays and cruises."
                        android:textColor="#fff"
                        android:textSize="14dp"

                        android:fontFamily="@font/confortaa"
                        android:textAllCaps="true"

                        android:textAlignment="viewEnd"
                        android:gravity="end"/>





                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="#fff"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/booknow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#0493ea"
                    android:fontFamily="@font/confortaa"
                    android:onClick="booknow"
                    android:text="Our Hotels"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/ourServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#0493ea"
                    android:fontFamily="@font/confortaa"
                    android:onClick="ourservices"
                    android:text="Our Services"
                    android:textAlignment="center"


                    android:textColor="#fff"
                    android:textSize="14dp" />


            </LinearLayout>

            <Button
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="#fff"/>






        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>